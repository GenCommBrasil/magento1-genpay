<?xml version="1.0"?>
<config>
    <modules>
        <Rakuten_RakutenLogistics>
            <version>1.2.0</version>
        </Rakuten_RakutenLogistics>
    </modules>

    <frontend>
        <routers>
            <rakutenlogistics>
                <use>standard</use>
                <args>
                    <module>Rakuten_RakutenLogistics</module>
                    <frontName>rakutenlogistics</frontName>
                </args>
            </rakutenlogistics>
        </routers>    
    </frontend>
    <global>
        <events>
            <resource_get_tablename>
                <observers>
                    <rakuten_rakutenlogistics>
                        <class>Rakuten_RakutenLogistics_Model_Observer</class>
                        <method>addAutoloader</method>
                    </rakuten_rakutenlogistics>
                </observers>
            </resource_get_tablename>
        </events>
        <resources>
            <rakuten_rakutenlogistics_setup>
                <setup>
                    <module>Rakuten_RakutenLogistics</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </rakuten_rakutenlogistics_setup>
             <rakutenlogistics_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </rakutenlogistics_write>
            <rakutenlogistics_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </rakutenlogistics_read>
        </resources>
        <blocks>
            <rakuten_rakutenlogistics>
                <class>Rakuten_RakutenLogistics_Block</class>
            </rakuten_rakutenlogistics>
            <adminhtml>
                <rewrite>
                    <sales_order_view>Rakuten_RakutenLogistics_Block_Adminhtml_Sales_Order_View</sales_order_view>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <rakutenlogistics>
                <class>Rakuten_RakutenLogistics_Helper</class>
            </rakutenlogistics>
        </helpers>
        <models>
            <rakuten_rakutenlogistics>
                <class>Rakuten_RakutenLogistics_Model</class>
                <resourceModel>rakuten_rakutenlogistics_resource</resourceModel>
            </rakuten_rakutenlogistics>
            <rakuten_rakutenlogistics_resource>
                <class>Rakuten_RakutenLogistics_Model_Resource</class>
                <entities>
                    <order>
                        <table>rakutenpay_orders</table>
                    </order>
                </entities>
            </rakuten_rakutenlogistics_resource>
        </models>
    </global>
    <admin>
        <routers>
            <rakutenlogistics>
                <use>admin</use>
                <args>
                    <module>Rakuten_RakutenLogistics</module>
                    <frontName>rakutenlogistics</frontName>
                </args>
            </rakutenlogistics>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <rakutenpay_menu translate="title" module="rakutenlogistics">
                <children>
                    <rakutenlogistics_configuration translate="title" module="rakutenlogistics">
                        <title>Logistics</title>
                        <action>adminhtml/system_config/edit/section/carriers/</action>
                        <sort_order>2000</sort_order>
                        <children>
                            <configuration>
                                <title>Configuration</title>
                                <sort_order>1</sort_order>
                                <action>adminhtml/system_config/edit/section/carriers/</action>
                            </configuration>
                            <batch>
                                <title>Generate Batch</title>
                                <sort_order>2</sort_order>
                                <action>rakutenlogistics/adminhtml_batch</action>
                            </batch>
                        </children>
                    </rakutenlogistics_configuration>
                </children>
            </rakutenpay_menu>
        </menu>
        <layout>
            <updates>
                <rakutenlogistics>
                    <file>rakuten/rakutenlogistics.xml</file>
                </rakutenlogistics>
            </updates>
        </layout>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <orderstatus_core_block_abstract_prepare_layout_before>
                        <type>model</type>
                        <class>Rakuten_RakutenLogistics_Model_Observer</class>
                        <method>addGenerateBatchAction</method>
                    </orderstatus_core_block_abstract_prepare_layout_before>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
    </adminhtml>
    <default>
         <carriers>
            <rakuten_rakutenlogistics>
                <active>1</active>
                <model>Rakuten_RakutenLogistics_Model_Shipping_Carrier_RakutenLogistics</model>
                <title>Rakuten Logistics</title>
                <name>Default Rate</name>
                <sallowspecific>0</sallowspecific>
            </rakuten_rakutenlogistics>
        </carriers>
    </default>
</config>

